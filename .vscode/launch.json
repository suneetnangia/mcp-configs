{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: MCP Server (Streamable-http Stateful)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "args": [
                "--stateful"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: MCP Server (Streamable-http Stateless)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: MCP Server (SSE)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "args": [
                "--transport=sse"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: MCP Client (HTTP Streamable)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/client.py",
            "args": [
                "--transport=streamable-http"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: MCP Client (SSE)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/client.py",
            "args": [
                "--transport=sse"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}