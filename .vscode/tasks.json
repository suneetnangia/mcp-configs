			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start MCP Server (SSE)",
			"type": "shell",
			"command": "python",
			"args": [
				"server.py",
				"--transport=sse"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
