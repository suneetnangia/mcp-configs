{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start MCP Server (Stateful HTTP Streamable)",
			"type": "shell",
			"command": "python",
			"args": [
				"server.py",
				"--stateful"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Start MCP Server (Stateless HTTP Streamable)",
			"type": "shell",
			"command": "python",
			"args": [
				"server.py"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
